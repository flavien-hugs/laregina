#!/bin/bash

NAME="laregina"
DIR=/home/laregina/laregina.deals/laregina
USER=laregina
GROUP=laregina
WORKERS=3
BIND=unix:/home/laregina/run/gunicorn.sock
DJANGO_SETTINGS_MODULE=core.production
DJANGO_WSGI_MODULE=core.wsgi
LOG_LEVEL=error

echo "DÃ©marrage de $NAME en tant que `whoami`"

cd $DIR
source ../bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DIR:$PYTHONPATH

exec ../bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
    -- nom $NAME \
    -- workers $WORKERS \
    -- user=$USER \
    -- group=$GROUP \
    -- bind=$BIND \
    -- log-level=LOG_LEVEL \
    -- log-file=-
